{
  "Application": {},
  "AllowedHosts": "*",
  "Kestrel": {
    "Http": {
      "Url": "http://*:8080",
      "Protocols": "Http1"
    }
  },
  "GrpcServer": {
    "UserService" : {
      "BaseAddress": "http://localhost:8070"
    },
    "AccommodationService" : {
      "BaseAddress": "http://localhost:8072"
    },
    "BookingService" : {
      "BaseAddress": "http://localhost:8071"
    }
  },
  "Platform": {
    "ServiceName": "<>",
    "Observability": {
      "Tracing": {
        "IsEnabled": false
      },
      "Metrics": {
        "IsEnabled": false
      },
      "Sentry": {
        "IsEnabled": false,
        "Configuration": {
          "Dsn": "",
          "Debug": false,
          "TracesSampleRate": 1.0,
          "MinimumEventLevel": "Warning"
        }
      },
      "Logging": {
        "Serilog": {
          "MinimumLevel": {
            "Default": "Verbose",
            "Override": {
              "Microsoft.Hosting.Lifetime": "Information",
              "Microsoft.AspNetCore": "Warning",
              "Microsoft.Extensions.Http": "Information",
              "System.Net.Http.HttpClient": "Information",
              "Grpc.Net.Client": "Information",
              "Grpc.AspNetCore.Server": "Information",
              "Npgsql": "Information"
            }
          }
        }
      }
    }
  }
}
